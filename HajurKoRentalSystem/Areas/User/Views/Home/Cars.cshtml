@using HajurKoRentalSystem.Models;
@model List<Vehicle>

<div class="container">
	<form method="post">
		<div class="row">
			<div class="col-12 mt-5">
				<h4 class="text-center text-primary">Collection</h4>
				<h1 class="text-center">Our Cars Collection</h1>
			</div>

			<div class="row mt-2 mb-5">
				@foreach (var item in Model)
				{
					<div class="col-4 mt-4 pt-3">
						<div class="card rounded-2" style="width: 21rem;">
							<img class="card-img-top" src="data:image /*;base64,@(Convert.ToBase64String(item.Image))" alt="Card image cap" style="height: 220px; ">
							<div class="card-body">
								<h5>Rs @item.PricePerDay<span class="text-secondary">/Day</span></h5>
								<p class="card-text mt-3">@item.Brand @item.Model</p>
								<a asp-action="Details" asp-route-vehicleId="@item.Id" class="btn btn-primary w-100 py-2">Details</a>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</form>
</div>
