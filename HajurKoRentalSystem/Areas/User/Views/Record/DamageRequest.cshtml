@using HajurKoRentalSystem.Areas.User.ViewModels;
@model DamageRequestViewModel

@{
    ViewData["Title"] = "DamageRequest";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />


<div class="container-fluid bg-light mb-5 vh-100">
    <div class="row justify-content-center ">

        <div class=" col-11 mb-5 " id="midcontent">
            <div class="container-fluid">
                <div class="row justify-content-center mt-5">
                    <div class="col-10 ">
                        <h3 class='pt-3 pb-3 text-primary'>Damage Details</h3>
                    </div>

                    <div class="col-10 pl-0 px-0 pr-4 bg-white shadow-sm pb-5 mt-4" style="height:600px;">
                        <a asp-action="Accepted" class="btn outline-none bg-secondary text-white rounded-0">
                            <i class="bi bi-box-arrow-left pe-2"></i>Back
                        </a>
                        <div class="container pb-2">
                            <div class="row justify-content-center">
                                <div class="col-11 mt-5 pb-5">
                                    <form method="post" class="row justify-content-center" enctype="multipart/form-data">
                                        <div class="col justify-content-end px-0 mb-3">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                            <h3 class="text-dark ps-1 ">Fill Damage Form for @Model.VehicleName</h3>


                                            <div class="form-group row mt-5">
                                                <input asp-for="DamageRequest.RentalId" class="form-control" type="hidden" required />

                                                <label class="ps-3">Damage Description (min - 20 words)</label>
                                                <textarea asp-for="DamageRequest.DamageDescription" class="form-control mt-3 mx-3" style="height:250px"> </textarea>
                                                <span asp-validation-for="DamageRequest.DamageDescription" class="text-danger"></span>

                                            </div>
                                            <div class=" col-3 ms-1  mt-3">
                                                <button type="submit" class="btn btn-primary form-control">Submit a request</button>
                                            </div>

                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>


                </div>

            </div>
        </div>

    </div>
</div>



