@model RentalViewModel

@{
    ViewData["Title"] = "Rental";
}



<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <!-- importing bootstrap framework in the document -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <!-- linking css stylesheet in the document -->
    <link rel="stylesheet" href="style.css">
    <!-- importing bootstrap icon library in the document -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <!-- importing fontawesome icon library into the document  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
</head>

    <div class="container-fluid bg-light mb-5">
        <div class="row justify-content-center">

            <div class=" col-11 mb-5 " id="midcontent">
                <div class="container-fluid">
                    <div class="row justify-content-center mt-4">
                        <div class="col-10">
                            <h3 class='pt-3 pb-3 text-primary'>Car rental request form</h3>
                        </div>

                        <div class="col-10 pl-0 pr-4 bg-white shadow-sm pb-5">
                            <div class="container pb-2">
                                <div class="row justify-content-center">
                                    <div class="col-11 mt-5">

                                        <form class='row gx-3 pt-3' method="post">

                                            <div class="col-12  mb-3">
                                                <div class="row ">
                                                    <div class="col-12 ">
                                                        <h5 class=" m-0">Request Details</h5>
                                                        <hr>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class='d-flex col-6 mb-4 flex-column'>
                                                <input asp-for="@Model.CustomerId" class="form-control" hidden />
                                                <label htmlFor="name" class="form-label">Customer Name</label>
                                                <input type="text" asp-for="@Model.CustomerName" disabled class=" form-control " placeholder='Enter name of member' aria-describedby="Name" />

                                            </div>


                                            <div class='d-flex col-6 mb-4 flex-column'>
                                                <label htmlFor="fnamelabel" class="form-label">Customer Address</label>
                                                <input asp-for="@Model.CustomerAddress" type="text" class="form-control " disabled placeholder='Enter your  address' />
                                            </div>

                                            <div class='d-flex col-6 mb-4 flex-column'>
                                                <label htmlFor="modellabel" class="form-label">Start Date</label>
                                                <input id="from-date" asp-for="@Model.StartDate" class="form-control" value="2023-04-01T12:00:00.000" aria-describedby="address" />
                                            </div>

                                            <div class='d-flex col-6 mb-4 flex-column'>
                                                <label htmlFor="modellabel" class="form-label">End Date</label>
                                                <input id="to-date" asp-for="@Model.EndDate" class="form-control" value="2023-04-01T12:00:00.000" />
                                            </div>

                                            <div class="col-12 bg-light px-0 mt-5 pb-5 pb-4">
                                                <h5 class=" m-0 px-3 py-2 text-bg-secondary">Order Summery </h5>

                                                <div class="row px-3">
                                                    <div class="col-6">
                                                        <div class="mt-3">
                                                            <input asp-for="@Model.VehicleId" class="form-control" hidden />
                                                            Car Name: <span class="text-primary"> @Model.VehicleName</span>
                                                        </div>
                                                        <div class="mt-3">
                                                            Car Details: <span class="text-primary">@Model.VehicleDescription</span>
                                                        </div>

                                                    </div>
                                                    <div class="col-6">
                                                        <div class="mt-3">
                                                            Price per day: <span class="text-primary"> @Model.ActualPrice</span>
                                                        </div>
                                                        <div class="mt-3">
                                                            Actual Total: <span class="text-primary">Rs 12000</span>
                                                        </div>
                                                        <div class="mt-3">
                                                            Discounted Total: <span class="text-primary">Rs 10800</span>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>


                                            <div class="col-12 mt-4 justify-content-end d-flex">
                                                <button type="submit" class="btn login-btn btn-primary px-5">Request Car</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>

                </div>
            </div>

        </div>
    </div>


    <!-- importing bootstrap's js bundle in the document -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>


