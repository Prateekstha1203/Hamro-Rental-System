@using HajurKoRentalSystem.Areas.Admin.ViewModel;

@{
    ViewData["Title"] = "Customer";
}
@model List<UserViewModel>

<div class="container-fluid" style=" margin-top:13vh;">
    <div class="row mb-3">
        <div class="col-6">
            <h3 class="text-dark">List of Customers</h3>
        </div>
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Name of the Customer</th>
                    <th class="text-center">Address</th>
                    <th class="text-center">Phone Number</th>
                    <th class="text-center">Total Rents</th>
                    <th class="text-center">Last Rented Date</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.TotalRents</td>
                        <td>@item.LastRentedDate</td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "User", new { id = item.UserId })" class="btn btn-sm">Information</a>
                            <a href="@Url.Action("Delete", "User", new { id = item.UserId })" class="btn btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $("#tableData").DataTable();
    </script>
}

