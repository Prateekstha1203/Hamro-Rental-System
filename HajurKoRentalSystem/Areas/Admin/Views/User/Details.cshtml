@using HajurKoRentalSystem.Areas.Admin.ViewModel;

@{
    ViewData["Title"] = "Details";
    var title = "Customer Details";
}
@model CustomerRentDetails

<h1>Details</h1>

<div class="container-fluid" style=" margin-top:10vh;">
    <form method="post">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h3 class="text-dark mb-4">@title</h3>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <div class="form-group row">
                                <input asp-for="Customer.Id" class="form-control" type="hidden" />
                                <div class="col-4">
                                    <label asp-for="Customer.Name" class="fw-bold">Full Name:</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.Name
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Customer.Email" class="fw-bold">Email:</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.Email
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Customer.PhoneNumber" class="fw-bold">Phone Number:</label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.PhoneNumber
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="Customer.Address" class="fw-bold">Address: </label>
                                </div>
                                <div class="col-8 mb-4">
                                    @Model.Customer.Address
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-8 offset-4">
                                    <div class="row">
                                        <div class="col">
                                            <a asp-action="Index" class="btn btn-blue form-control">Back to List</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @if (Model.CustomerRent.Count > 0)
    {
        <div class="row">
            <table id="tableData" class="table table-striped table-bordered" style="width:100%">
                <thead class="mt-2">
                    <tr class="table-info">
                        <th class="text-center">Vehicle Name</th>
                        <th class="text-center">Rented Days</th>
                        <th class="text-center">Return Date</th>
                        <th class="text-center">Total Amount</th>
                        <th class="text-center">Approved Staff</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CustomerRent)
                    {
                        <tr>
                            <td>@item.VehicleName</td>
                            <td>@item.RentedDays</td>
                            <td>@item.ReturnedDate</td>
                            <td>@item.TotalAmount</td>
                            <td>@item.ApprovedStaff</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h2>The customer hasnt rented anything yet</h2>
    }
</div>

