@using HajurKoRentalSystem.Areas.Admin.ViewModel;
@model List<RentalDetailsViewModel>

@{
	ViewData["Title"] = "Requested Rents";
}



<partial name="_Notification" />


<link rel="stylesheet" href="~/css/Index.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />

<style>
    th{
        font-size:14px;
    }

    td {
        font-size: 14px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-5 col-lg-2  d-block align-content-center pe-0 collapse accordion-collapse  vh-100 " id="sidebar">
            <div class="d-flex p-0">
                <h5 class="mt-4 ps-3 pb-2"> <a class="navbar-brand text-black" asp-area="" asp-controller="Home" asp-action="Index">HajurKoRentalSystem</a> </h5>

            </div>
            <div>
                <ul class="nav nav-pills flex-column mt-2">
                    <li class="nav-item ms-2 mt-5 mb-3 p-1">
                        <a class="nav-link" aria-current="page" href="#"> <i class="bi bi-house-fill  pe-2"></i> Dashboard</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link " asp-area="Admin" asp-controller="Vehicle" asp-action="Index"><i class="bi bi-plus-circle-fill pe-2"></i> Cars </a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link" href="#"> <i class="fa-solid fa-user-tie  pe-2"></i> Profile</a>
                    </li>

                    <li class="dropdown-menu-lg-end nav-item ms-2 mb-3 py-1 ">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> <i class="fa-solid fa-circle  pe-2"></i> DropDown</a>
                        <ul class="dropdown-menu dropdown-menu-end col-2 mx-0">
                            <li class="nav-item ms-2 mb-3 py-1 "><a class="dropdown-item nav-link" href="#"><i class="fa-solid fa-circle  pe-2"></i>Sub-item</a></li>
                            <li class="nav-item ms-2 mb-3 py-1 "><a class="dropdown-item nav-link" href="#"><i class="fa-solid fa-circle  pe-2"></i>Sub-item</a></li>
                            <li class="nav-item ms-2 mb-3 py-1 "><a class="dropdown-item nav-link" href="#"><i class="fa-solid fa-circle  pe-2"></i>Sub-item</a></li>

                        </ul>
                    </li>

                    <li class="dropdown-menu-lg-end nav-item ms-2 mb-3 py-1 ">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> <i class="fa-solid fa-square  pe-2"></i> DropDown</a>
                        <ul class="dropdown-menu dropdown-menu-end col-2 mx-0">
                            <li class="nav-item ms-2 mb-3 py-1 "><a class="dropdown-item nav-link" href="#"><i class="fa-solid fa-square  pe-2"></i>Sub-item</a></li>
                            <li class="nav-item ms-2 mb-3 py-1 "><a class="dropdown-item nav-link" href="#"><i class="fa-solid fa-square  pe-2"></i>Sub-item</a></li>
                            <li class="nav-item ms-2 mb-3 py-1 "><a class="dropdown-item nav-link" href="#"><i class="fa-solid fa-square  pe-2"></i>Sub-item</a></li>

                        </ul>
                    </li>

                    <li class="nav-item ms-2 mb-3 p-1  active">
                        <a class="nav-link" asp-area="Admin" asp-controller="Rental" asp-action="Requests"> <i class="fa-solid fa-calendar  pe-2"></i> Approve Rental</a>
                    </li>

                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link" href="#"> <i class="bi bi-activity  pe-2"></i> Sales</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link" href="#"> <i class="fa-solid fa-coins  pe-2"></i> Change Password</a>
                    </li>
                    @* <li class="nav-item ms-2 mb-3 p-1">
                    <a class="nav-link" href="#"> <i class="fa-solid fa-coins  pe-2"></i> Logout</a>
                    </li>*@
                    <li class="nav-item ms-2 mb-3 p-1">
                        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <a href="#" id="logout" class="nav-link text-danger"><i class="fa-solid fa-coins  pe-2"></i>Logout</a>
                        </form>
                    </li>

                </ul>

            </div>
        </div>
        <div class="col-md-9 col-lg-10 " id="midcontent">
            <div class="container-fluid">
                <div class="row justify-content-center mt-4">

                    <div class="col-11  pl-0 pr-4 bg-white mt-5 pb-5">
                        <div class="container pb-4">
                            <div class="row justify-content-center">
                                <div class="col-12 mt-5">
                                    <div class="d-flex justify-content-between">
                                    <h3 class='pt-3 text-primary pb-1 '>Requests for renting cars.</h3>
                                       
                                 
                                    </div>
                                    <hr>
                                    <div>
                                        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
                                            <thead class="mt-2">
                                                <tr class="">
                                                    <th class="text-center">Image</th>
                                                    <th class="text-center">Customer Name</th>
                                                    <th class="text-center">Vehicle Name</th>
                                                    <th class="text-center">Start Date</th>
                                                    <th class="text-center">End Date</th>
                                                    <th class="text-center">Total Amount</th>
                                                    <th class="text-center">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <form method="post">

                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td class="align-middle" ><img id="profilePicture" style="border-radius:50%;height:50px; width:50px;" src="data:image/*;base64,@(Convert.ToBase64String(item.VehicleImages))"></td>
                                                        <td class="align-middle" >@item.UserName</td>
                                                        <td class="align-middle" >@item.VehicleName</td>
                                                        <td class="align-middle" > @item.StartDate</td>
                                                        <td class="align-middle" >@item.EndDate</td>
                                                        <td class="align-middle" >@item.TotalAmount</td>
                                                        <td class="align-middle">
                                                            <div class="d-flex justify-content-center">

                                                                <button class="btn btn-success  mx-1" asp-area="Admin" asp-controller="Rental" asp-action="AcceptRent" asp-route-rentalId="@item.Id" type="submit"><i class="bi bi-pencil-square"></i>Approve</button>
                                                                <button type="submit" class="btn btn-danger asp-area=" Admin" asp-controller="Rental" asp-action="RejectRent" asp-route-rentalId="@item.Id" mx-1"><i class="bi bi-trash"></i>Reject</button>
                                                            </div>
                                                           
                                                        </td>
                                                    </tr>
                                                }
                                                </form>
                                            </tbody>
                                        </table>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>

                    </div>


                </div>

            </div>
        </div>

    </div>
</div>

