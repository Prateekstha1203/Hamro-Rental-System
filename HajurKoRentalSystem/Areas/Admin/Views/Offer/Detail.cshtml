@using HajurKoRentalSystem.Areas.Admin.ViewModel;
@model OfferDetailViewModel

@{
    ViewData["Title"] = "Detail";
}

<link rel="stylesheet" href="~/css/Index.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />

<style>
    table th {
        background-color: #D9DCFD !important;
        border-color: #f8f9fa;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-5 col-lg-2  d-block align-content-center pe-0 collapse accordion-collapse  vh-100 " id="sidebar">
            <div class="d-flex p-0">
                <h5 class="mt-4 ps-3 pb-2"> <a class="navbar-brand text-black" asp-area="" asp-controller="Home" asp-action="Index">HajurKoRentalSystem</a> </h5>

            </div>
            <div>
                <ul class="nav nav-pills flex-column mt-2">

                    <li class="nav-item ms-2 mb-3 mt-5 p-1 ">
                        <a class="nav-link " asp-area="Admin" asp-controller="Vehicle" asp-action="Index"><i class="bi bi-plus-circle-fill pe-2"></i> Cars </a>
                    </li>


                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link" asp-area="Admin" asp-controller="Rental" asp-action="Requests"> <i class="fa-solid fa-calendar  pe-2"></i> Approve Rental</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link" asp-area="Admin" asp-controller="Rental" asp-action="AcceptedRents"> <i class="fa-solid fa-calendar  pe-2"></i> Current Rents</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link" asp-area="Admin" asp-controller="Rental" asp-action="Returned"> <i class="fa-solid fa-calendar  pe-2"></i> Returned Rents</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a class="nav-link" asp-area="Admin" asp-controller="Damage" asp-action="Index"> <i class="fa-solid fa-calendar  pe-2"></i> Damage Requests</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1 ">
                        <a asp-area="Admin" asp-controller="Sales" asp-action="Index" class="nav-link"> <i class="bi bi-activity  pe-2"></i> Sales</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1 active">
                        <a asp-area="Admin" asp-controller="Offer" asp-action="Index" class="nav-link"> <i class="bi bi-activity  pe-2"></i> Offers</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a asp-area="Admin" asp-controller="User" asp-action="Customer" class="nav-link"> <i class="fa-solid fa-user-tie  pe-2"></i> Customers</a>
                    </li>
                    <li class="nav-item ms-2 mb-3 p-1">
                        <a asp-area="Admin" asp-controller="User" asp-action="Staff" class="nav-link"> <i class="bi bi-activity  pe-2"></i> Staffs</a>
                    </li>

                    <li class="nav-item ms-2 mb-3 p-1">
                        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <a href="#" id="logout" class="nav-link text-danger"><i class="fa-solid fa-coins  pe-2"></i>Logout</a>
                        </form>
                    </li>

                </ul>

            </div>
        </div>
        <div class="col-md-9 col-lg-10 " id="midcontent">
            <div class="container-fluid">
                <div class="row justify-content-center mt-4">

                    <div class="col-11 pl-0 pr-4 bg-white mt-5 pb-5">
                        <div class="container">
                            <div class="col-6 mt-5 px-3">
                                <h3 class="text-primary">Offer Summary</h3>
                            </div>
                            <hr />
                            <div class="row justify-content-between">
                                <div class=" col-12 p-3 mb-5 ">
                                    <div>
                                        <h5 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-primary">Offer Detail: </span>
                                        </h5>
                                        <div class="row mb-3">
                                            <div class="col-3">
                                                <label asp-for="Name" class="fw-bold">Name:</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="Name" disabled class="form-control w-75" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-3 mb-3">
                                                <label asp-for="StartDate" class="fw-bold">Start Date: </label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="StartDate" disabled class="form-control w-75" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-3 mb-3">
                                                <label asp-for="EndDate" class="fw-bold">End Date: </label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="EndDate" disabled class="form-control w-75" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-3 mb-3">
                                                <label asp-for="Discount" class="fw-bold">Discount: </label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="Discount" disabled class="form-control w-75" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-3 mb-3">
                                                <label asp-for="Description" class="fw-bold">Description: </label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="Description" disabled class="form-control w-75" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <hr />
                                <div class="col-12 p-3 ">
                                    <div>
                                        <h5 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-primary ">Offered Vehicles: </span>
                                        </h5>
                                        @foreach (var item in Model.Vehicles)
                                        {
                                            <div class="row mb-3">
                                                <div class="col-3 mb-3">
                                                    <label asp-for="@item.Model" class="fw-bold">Model: </label>
                                                </div>
                                                <div class="col-9">
                                                    <input asp-for="@item.Model" disabled class="form-control w-75" />
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>

    </div>
</div>


@section Scripts{
    <script>
        $("#tableData").DataTable();

        document.getElementById('logout').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('logoutForm').submit();
        });
    </script>
}

<div class="container" style=" margin-top:10vh;">
    <div class="col-6 px-3">
        <h3>Offer Summary</h3>
    </div>
    <div class="d-flex w-100 justify-content-between">
        <div class=" p-3 w-50">
            <div>
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-info">Offer Detail: </span>
                </h4>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="Name" class="fw-bold">Name:</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Name" disabled class="form-control w-75" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-3 mb-3">
                        <label asp-for="StartDate" class="fw-bold">Start Date: </label>
                    </div>
                    <div class="col-9">
                        <input asp-for="StartDate" disabled class="form-control w-75" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3 mb-3">
                        <label asp-for="EndDate" class="fw-bold">End Date: </label>
                    </div>
                    <div class="col-9">
                        <input asp-for="EndDate" disabled class="form-control w-75" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3 mb-3">
                        <label asp-for="Discount" class="fw-bold">Discount: </label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Discount" disabled class="form-control w-75" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3 mb-3">
                        <label asp-for="Description" class="fw-bold">Description: </label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Description" disabled class="form-control w-75" />
                    </div>
                </div>

            </div>
        </div>
        <div class="p-3 w-50">
            <div>
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-info">Offered Vehicles: </span>
                </h4>
                @foreach (var item in Model.Vehicles)
                {
                    <div class="row mb-3">
                        <div class="col-3 mb-3">
                            <label asp-for="@item.Model" class="fw-bold">Model: </label>
                        </div>
                        <div class="col-9">
                            <input asp-for="@item.Model" disabled class="form-control w-75" />
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>