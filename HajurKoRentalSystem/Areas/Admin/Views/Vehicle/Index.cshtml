@using HajurKoRentalSystem.Models;

@model List<Vehicle>

@{
    ViewData["Title"] = "Vehicle";
}

<div class="container">
    <h1>Vehicles</h1>
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-dark">List of Brands</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-dark" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Add a new Brand</a>
        </div>
    </div>
    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Model</th>
                    <th class="text-center">Brand</th>
                    <th class="text-center">Color</th>
                    <th class="text-center">Price per Day</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Model</td>
                        <td>@item.Brand</td>
                        <td>@item.Color</td>
                        <td>@item.PricePerDay</td>
                        <td>
                            <a href="@Url.Action("Details", "Vehicle", new { id = item.Id })" class="btn btn-dark btn-sm">Details</a>
                            <a href="@Url.Action("Upsert", "Vehicle", new { id = item.Id })" class="btn btn-dark btn-sm">Update</a>
                            <a href="@Url.Action("Delete", "Vehicle", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

