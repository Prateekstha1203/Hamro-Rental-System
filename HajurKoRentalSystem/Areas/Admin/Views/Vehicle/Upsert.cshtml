@using HajurKoRentalSystem.Models;
@model Vehicle

@{
    ViewData["Title"] = "Vehicle";
}

<div class="container-fluid">
    <h1>Brands</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h2 class="text-dark">Vehicle</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <div class="col-4">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <div class="col-4">
                        <label asp-for="Color"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <div class="col-4">
                        <label asp-for="PricePerDay"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="PricePerDay" class="form-control" />
                        <span asp-validation-for="PricePerDay" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Brand" class="control-label mb-2"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input type="file" id="uploadImage" onchange="readURL(this);" placeholder="Profile Image" name="image" multiple="multiple" class="ms-2 form-control" accept="image/png, image/gif, image/jpeg" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-dark form-control" asp-route-id="@Model">Update</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-dark form-control">Create</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


