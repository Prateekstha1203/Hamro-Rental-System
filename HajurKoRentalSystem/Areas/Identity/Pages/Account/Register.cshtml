@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 bg-danger vh-100">
        </div>

        <div class="col-6 mt-5 mb-5 px-5">
            <div class="row px-5">
                <div class="col-10">
                    <h1 class="text-primary">Welcome to </h1>
                    <h1 class="text-primary">Hajur ko Car Rental </h1>
                    <h5 class="pt-5">Create an account.</h5>
                </div>
            </div>

            <form id="registerForm" class=" px-5 mt-2 " asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="col-10">
                    <div class="form-group mt-3">
                        <input asp-for="Input.Email" type="email" class="form-control py-2 rounded-0" autocomplete="username" aria-required="true" placeholder="Enter your email">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-10">
                    <div class="form-group mt-3">
                        <input asp-for="Input.Name" type="text" class="form-control py-2 rounded-0" autocomplete="name" aria-required="true" placeholder="Enter your name">
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-10">
                    <div class="form-group mt-3">
                        <input asp-for="Input.Address" type="text" class="form-control py-2 rounded-0" autocomplete="address" aria-required="true" placeholder="Enter your Address">
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-10">
                    <div class="form-group mt-3">
                        <input asp-for="Input.PhoneNumber" type="number" class="form-control py-2 rounded-0" autocomplete="username" aria-required="true" placeholder="Enter your Phone number">
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="col-10">
                    <div class="form-group mt-4">
                        <input asp-for="Input.Password" type="password" class="form-control py-2 rounded-0" autocomplete="new-password" aria-required="true" placeholder="Enter your password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-10">
                    <div class="form-group mt-4">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control py-2 rounded-0" placeholder="Confirm Password" autocomplete="new-password" aria-required="true">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-10">
                    <button id="registerSubmit" type="submit" class="btn btn-primary mt-4 px-5 rounded-0 w-100">Register</button>
                </div>

                <div class=" text-center col-10 mt-2 ">
                    <p>
                        Already have an account ? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}