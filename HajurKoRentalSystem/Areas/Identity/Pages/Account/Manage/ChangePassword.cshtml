@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10 pl-0 pr-4 bg-light pb-5">
            <div class="container pb-4">
                <div class="row justify-content-center">
                    <div class="col-11">
                        <h3 class="pt-3 pb-1 mt-4">Change your password </h3>
                        <hr>
                        <form class="row gx-3 pt-3 justify-content-center" id="change-password-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="d-flex col-7 mb-4 flex-column">
                                <label class="form-label">Current Password</label>
                                <input asp-for="Input.OldPassword" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="****" />
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>

                            <div class="d-flex col-7 mb-4 flex-column">
                                <label class="form-label">New Password</label>
                                <input asp-for="Input.NewPassword" type="password" class=" form-control " placeholder="****" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>

                            <div class="d-flex col-7 mb-4 flex-column">
                                <label class="form-label">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" type="password" class=" form-control " placeholder="****" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-7 justify-content-center d-flex mt-3">
                                <button type="submit" class="btn login-btn btn-success px-5 py-2 w-100">Change Password</button>
                            </div>

                        </form>
                    </div>

                </div>

            </div>

        </div>





    </div>
   
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

