@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10 pl-0 pr-4 bg-light pb-5">
            <div class="container pb-4">
                <div class="row justify-content-center">
                    <div class="col-11">
                        <h3 class="pt-3 pb-1 mt-4">Update your profile </h3>
                        <hr>
                        <form class="row gx-3 pt-5" id="profile-form" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="d-flex col-6 mb-4 flex-column">
                                <label htmlFor="username" class="form-label">Name</label>
                                <input type="text" class="form-control " asp-for="Input.Name" disabled />
                            </div>
                            <div class="d-flex col-6 mb-4 flex-column">
                                <label htmlFor="username" class="form-label">Username</label>
                                <input type="text" class="form-control " asp-for="Username" disabled />
                            </div>
                            <div class="d-flex col-6 mb-4 flex-column">
                                <label class="form-label">Phone Number</label>
                                <input asp-for="Input.PhoneNumber" type="number" class=" form-control " />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="d-flex col-6 mb-4 flex-column">
                                <label class="form-label">License Number</label>
                                <input asp-for="Input.LicenseNumber" type="text" class=" form-control " />
                                <span asp-validation-for="Input.LicenseNumber" class="text-danger"></span>
                            </div>
                            <div class="d-flex col-6 mb-4 flex-column">
                                <label class="form-label">Citizenship Number</label>
                                <input asp-for="Input.CitizenshipNumber" type="text" class=" form-control " />
                                <span asp-validation-for="Input.CitizenshipNumber" class="text-danger"></span>
                            </div>
                            @if(Model.Input.CitizenshipNumber == null)
                            {
                                <div class="d-flex col-6 mb-4 flex-column">
                                    <label class="form-label">License File</label>
                                    <input type="file" name="license" id="exampleInputFile" class="form-control" accept="application/pdf" />
                                </div>
                                <div class="d-flex col-6 mb-4 flex-column">
                                    <label class="form-label">Citizenship File</label>
                                    <input type="file" name="citizenship" id="exampleInputFile" class="form-control" accept="application/pdf" />
                                </div>
                            }
                            <div class="col-12 d-flex justify-content-end">
                                <button id="update-profile-button" type="submit" class="btn login-btn btn-success px-5">Update Profile</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
