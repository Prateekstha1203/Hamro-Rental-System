@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10 pl-0 pr-4 bg-light pb-5">
            <div class="container pb-4">
                <div class="row justify-content-center">
                    <div class="col-11">
                        <h3 class="pt-3 pb-1 mt-4">Update your profile </h3>
                        <hr>
                        <form class="row gx-3 pt-5" id="profile-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12">
                                <label htmlFor="imageupload" class="form-label  py-4 px-3 bg-white">
                                    <div class="d-flex flex-column justify-content-center text-center"> <span><i class="bi bi-camera-fill text-primary"></i></span>Upload image</div>
                                </label>
                            </div>
                            <div class="d-flex col-6 mb-4 flex-column">
                                <label htmlFor="lanamelabel" class="form-label">Name</label>
                                <input type="text" class=" form-control " placeholder="Enter your name" aria-describedby="Name" />
                            </div>

                            <div class="d-flex col-6 mb-4 flex-column">
                                <label htmlFor="fnamelabel" class="form-label">Email</label>
                                <input type="email" class="form-control " placeholder="email" aria-describedby="email" />
                            </div>

                            <div class="d-flex col-6 mb-4 flex-column">
                                <label htmlFor="username" class="form-label">Username</label>
                                <input type="text" class="form-control " asp-for="Username" disabled />
                            </div>

                            <div class="d-flex col-6 mb-4 flex-column">
                                <label class="form-label">Lisence Number</label>
                                <input type="text" class=" form-control  " placeholder="Enter Lisence Number" aria-describedby="model" />
                            </div>

                            <div class="d-flex col-6 mb-4 flex-column">
                                <label class="form-label">Phone Number</label>
                                <input asp-for="Input.PhoneNumber" type="number" class=" form-control " />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                            </div>

                            <div class="col-12 d-flex justify-content-end">
                                <button id="update-profile-button" type="submit" class="btn login-btn btn-success px-5">Update Profile</button>
                            </div>

                        </form>
                    </div>

                </div>

            </div>

        </div>





    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
